<%- include('includes/shared/auth-page-top') %>

<div class="col-12 text-center mb-3">
	<h1 class="h3 mb-0 fw-normal">Log ind</h1>
</div>
<% if (locals.inputData.message) { %>
	<%- include('../shared/includes/message') %>
<% } %>
<% const showForgotPasswordLink = false; %>
<div class="col-12<%= showForgotPasswordLink ? ' mb-3' : ' mb-4'; %>">
	<form action="/auth/login" method="POST">
		<input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
		<div class="form-floating">
			<input type="email" class="form-control rounded-bottom-0" id="email" name="email" placeholder="E-mailadresse" value="<%= inputData.email %>" required>
			<label for="email">E-mailadresse</label>
		</div>
		<div class="form-floating mb-3">
			<input type="password" class="form-control rounded-top-0" id="password" name="password" placeholder="Adgangskode" value="<%= inputData.password %>" required>
			<label for="password">Adgangskode</label>
		</div>
		<% const showStayLoggedInCheckbox = false; %>
		<% if (showStayLoggedInCheckbox) { %>
			<div class="d-flex justify-content-between align-items-center">
				<div class="form-check me-3 me-sm-4">
					<input type="checkbox" class="form-check-input" id="stayLoggedIn" name="stayLoggedIn" value="1"<%= 0 ? ' checked' : ''; %>>
					<label class="form-check-label" for="stayLoggedIn">Forbliv logget ind</label>
				</div>
				<button type="submit" class="btn btn-primary py-2 flex-grow-1">Login</button>
			</div>
		<% } else { %>
			<button type="submit" class="btn btn-primary py-2 w-100">Login</button>
		<% } %>
	</form>
</div>
<% if (showForgotPasswordLink) { %>
	<div class="col-12 mb-4 text-center lh-sm">
		<a href="#" class="small link-secondary link-offset-1">Har du glemt din adgangskode?</a>
	</div>
<% } %>
<div class="col-12 d-flex align-items-center mb-4">
	<div class="flex-grow-1 border-bottom"></div>
	<span class="mx-4 text-body-tertiary">eller</span>
	<div class="flex-grow-1 border-bottom"></div>
</div>
<div class="col-12">
	<p class="mb-0 text-center">Har du ingen bruger?<span class="d-sm-none"><br></span><span class="d-none d-sm-inline"> </span><a href="/auth/tilmeld" class="link-primary link-offset-1">Tilmeld dig gratis!</a></p>
</div>

<%- include('includes/shared/auth-page-bottom') %>